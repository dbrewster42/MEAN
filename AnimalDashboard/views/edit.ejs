<!DOCTYPE html>
<html>
<head>
	<title>New</title>
</head>
<body>
	<%- JSON.stringify(messages) %> 
	<% if(messages.registration) { %>
    	<% for (var x of messages.registration) { %>
    	<h3><%= x %></h3>
    	<% } %>
 	<% } %>
	<form method="post" action="/animal/<%= animal._id %>">
		Name <input type="text" name="name" value="<%= animal.name %>"><br>
		Species <input type="text" name="species" value="<%= animal.species %>"><br>
		Description <input type="textarea" name="description" value="<%= animal.description %>"><br>
		<input type="submit" value="Submit">
	</form>
</body>
</html>